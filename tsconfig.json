{
  "compilerOptions": {
    "types" : ["node"],
    "lib": ["es2015"],
    "target": "es2015",
    "module": "commonjs",
    "preserveConstEnums": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "outDir": ".",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
}